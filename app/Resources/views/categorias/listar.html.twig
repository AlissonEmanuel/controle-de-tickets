{% extends 'layout.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
{% endblock %}

{% block titulo %}Categorias{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Nova Categoria</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
                        <div class="form-group nova-categoria">
                            {{ form_label(form.nome, 'Nome:') }}
                            {{ form_widget(form.nome, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        {{ form_widget(form.salvar, {'attr': {'class': 'btn btn-primary'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="box box-primary">
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in categorias %}
                            <tr>
                                <td>{{ c.id }}</td>
                                <td>{{ c.nome }}</td>
                                <td>
                                    <form action="{{ path('remover_categoria') }}" method="post"
                                      onsubmit="return confirm('Deseja excluir {{ c.nome }}?');">
                                        <input type="hidden" name="id" value="{{ c.id }}">
                                        <button class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}