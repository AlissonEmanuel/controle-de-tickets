{% extends 'layout.html.twig' %}

{% block titulo %}Categorias{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="box box-primary">

                <div class="box-body">
                    <a href="#" class="btn btn-primary">Nova Categoria</a>
                    <br><br>

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in categorias %}
                            <tr>
                                <td>{{ c.id }}</td>
                                <td>{{ c.nome }}</td>
                                <td>
                                    <form action="{{ path('remover_categoria') }}" method="post"
                                      onsubmit="return confirm('Deseja excluir {{ c.nome }}?');">
                                        <input type="hidden" name="id" value="{{ c.id }}">
                                        <button class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}