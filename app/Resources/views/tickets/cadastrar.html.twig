{% extends 'layout.html.twig' %}

{% block titulo %}Cadastrar{% endblock %}
{% block subtitulo %}Ticket{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {% if not temErro is defined %}
            <div class="callout callout-info">
                <h4>Dica!</h4>

                <p>
                    Utilize o campo de descrição para explicar melhor seu problema.
                    Detalhe o que você estava fazendo quando o erro ocorreu,
                    e que tipo de mensagem apareceu, por exemplo.
                </p>
            </div>
            {% endif %}

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Novo Ticket</h3>
                </div>

                <div class="box-body">
                    {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.titulo, 'Título') }}
                            {{ form_widget(form.titulo, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.descricao, 'Descrição') }}
                            {{ form_widget(form.descricao, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.categoria, 'Categoria') }}
                            {{ form_widget(form.categoria, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="box-footer">
                        {{ form_widget(form.salvar, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}