{% extends 'layout.html.twig' %}

{% block titulo %}Usu√°rios{% endblock %}

{% block conteudo %}
    <div class="row">
        <div class="box box-primary">
            <div class="box-body">
                <div id="tabela-usuarios">
                    <table class="data-table table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>E-mail</th>
                                <th>Tipo</th>
                                <th>Data de Cadastro</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for usuario in usuarios %}
                            <tr>
                                <td>{{ usuario.nome }}</td>
                                <td>{{ usuario.email }}</td>
                                <td>{{ usuario.tipo }}</td>
                                <td>{{ usuario.dataCadastro|date('d/m/Y H:i') }}</td>
                                <td>
                                    <form action="{{ path('remover_usuario') }}" method="post"
                                          onsubmit="return confirm('Deseja excluir {{ usuario.nome }}?');">
                                        <input type="hidden" name="id" value="{{ usuario.id }}">
                                        <button class="btn btn-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock%}